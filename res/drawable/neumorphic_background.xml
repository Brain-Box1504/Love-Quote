<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0"/> <!-- Background color -->
                    <corners android:radius="20dp"/> <!-- Adjust corner radius as needed -->
                </shape>
            </item>
            <item android:left="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#BDBDBD"/> <!-- Darker shadow color -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/> <!-- Lighter highlight color -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>